<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% blog_title = 'Stefan Armijo' %>
    <title><%= blog_title %> <%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
  </head>
  <body>
          <nav class="top-bar">
            <a href="/"><%= blog_title %></a>
            <a href="/html/">HTML</a> |
            <a href="/css/">CSS</a> |
            <a href="/js/">JavaScript</a> 
            <a href="/jquery/">jQuery</a>
            <% if false %>  <!-- BEGIN comment out stolen nav bar stuff -->
        <ul class="title-area">
          <!-- Title Area -->
          <li class="name">
            <h1><a href="/"><%= full_name %></a></h1>
          </li>
          <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
          <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
        </ul>
        <section class="top-bar-section">
        <!-- Left Nav Section -->
        <ul class="right">
          <%= social_network_link(
            'Google Plus',
            google_plus_user_id,
            "https://plus.google.com/#{google_plus_user_id}"
            ) %>
          <%= social_network_link(
            'Facebook',
            facebook_profile_name,
            "http://facebook.com/#{facebook_profile_name}"
            ) %>
          <%= social_network_link(
            'Twitter',
            twitter_username,
            "http://twitter.com/#{twitter_username}"
            ) %>
          <%= social_network_link(
            'LinkedIn',
            linkedin_profile_name,
            "http://linkedin.com/in/#{ linkedin_profile_name}"
          ) %>
          <%= social_network_link(
            'Dribble',
            dribbble_username,
            "http://dribble.com/#{dribbble_username}"
          ) %>    
          <%= social_network_link(
            'Github',
            github_username,
            "http://github.com/#{github_username}"
          ) %>
          <li class="divider"></li>
          <li class="portfolio"><a href="/portfolio.html">Portfolio</a></li>
          <li class="divider"></li>
          <% if resume %>
            <li class="resume"><a href="/<%= resume %>">Résumé</a></li>
            <li class="divider"></li>
          <% end %>
          <li class="blog"><a href="/blog">Blog</a></li>
        </ul>
        <% end %> <!-- END comment out stolen nav bar stuff -->
      </nav>
      <!-- End Header and Nav -->

    <div id="main" role="main">
      <%= yield %>
    </div>

    <aside>
      <h2>Recent Articles</h2>
      <ol>
        <% blog.articles[0...10].each do |article| %>
          <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
        <% end %>
      </ol>

      <h2>Tags</h2>
      <ol>
        <% blog.tags.each do |tag, articles| %>
          <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
        <% end %>
      </ol>

      <h2>By Year</h2>
      <ol>
        <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
          <li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
        <% end %>
      </ol>
    </aside>
  </body>
</html>
