<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <% blog_title = 'Disparate Interests' %>
  <% blog_title = '[dev] ' + blog_title if development? %>
  <title>
      <%= blog_title + ' - ' + current_article.title unless current_article.nil? %>
  </title>
  <%= stylesheet_link_tag "all" %>
  <%= feed_tag :atom, "#{blog('scribbles').options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
  <%#= stylesheet_link_tag 'assets/normalize', media: 'all' %>
</head>

<body>

    <%= partial "partials/nav" %>
    <div id="main" role="main">
        <h2 class="article-title"> <%= current_article.title %> </h2>
        <section class="content">
            <%= yield %>
        </section>
    </div>

  <aside>
    <h2>Recent Articles</h2>
    <!-- dont show drafts or 'special' articles -->
    <ol>
    <% blog('scribbles').articles.each_with_index do |article, i| %>
        <% if !article.tags.any? { |t| ["draft", "special"].include? t } %>
            <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
        <% end %>
    <% end %>
    </ol>
  </aside>

</body>
</html>
