<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% blog_title = 'SFA BLG' %>
    <title><%= blog_title %> <%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog('scribbles').options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= stylesheet_link_tag 'assets/normalize', media: 'all' %>
  </head>
  <body>
          <nav class="top-bar">
            <%= link_to 'Stefan Armijo', '/' %>
            <%= link_to 'blog', '/blog.html' %>
            <%= link_to 'notes', '/notes.html' %>
            <%= link_to 'about', '/about.html' %>
          </nav>

    <div id="main" role="main">
      <%= yield %>
    </div>

    <aside>
      <h2>Recent Articles</h2>
      <ol>
        <% blog('scribbles').articles[0...10].each do |article| %>
          <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
        <% end %>
      </ol>

    </aside>
  </body>
</html>
